{# templates/Admin/Category/index.html.twig #}

{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/category.css') }}">{% endblock %}


{% block body %}
    <div class="rating-page">
        <div class="category-head">
            <h1>Admin Categories</h1>
        </div>
        <div class="create-sec">
            <a href="{{ path('admin_category_create') }}" class="create-btn" >
                create
            </a>
        </div>
        <div class="category-content">
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.description }}</td>
                        <td>
                            <div class="action-button">
                                <a href="{{ path('admin_categories_edit', {'id': category.id}) }}"
                                   class="edit-btn "
                                >
                                    Edit
                                </a>
                                <a href="{{ path('admin_categories_delete', {'id': category.id}) }}"
                                   class="btn btn-danger delete-btn"
                                   onclick="return confirm('Are you sure you want to delete this category?')">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
